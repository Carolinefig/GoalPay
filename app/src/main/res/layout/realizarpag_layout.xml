<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F6FAFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txtRealizarPag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="25dp"
            android:text="realizar pagamento"
            android:textColor="#5E43C3"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Sair"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:background="@color/cardview_light_background"
            app:srcCompat="@drawable/sair" />

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSaldoConta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="saldo em conta"
                    android:textColor="#A6A6A6"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="498,47"
                    android:textColor="#5E43C3"
                    android:textSize="13dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCarteira"
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"

                    android:background="@drawable/botao_tipos_pagamento"
                    android:text="carteira de crédito goalPay 1x"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtRs"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="170dp"
                    android:text="R$"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtValorPagamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_marginBottom="150dp"
                    android:text="240.00"
                    android:textColor="#C4000000"
                    android:textSize="70dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDadosRecebedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados de quem irá receber"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtCartGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="carteira goalPay"
                    android:textSize="12dp"
                    android:textColor="#383838"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtEmailUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="alansinho.passos@gmail.com"
                    android:textColor="#5F000000"
                    android:textSize="9dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="320dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="30dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:layout_rowWeight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_account" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtDadosUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Allan da Silva Passos • 748.547.987-57"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtCartEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="carteira • allansinho.passos@gmail.com"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="460dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbxTermos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="eu li e aceito os termos de uso"
                    android:textColor="#A6A6A6"
                    android:layout_marginTop="30dp" />

                <Button
                    android:id="@+id/btnRealizarPagamento"
                    android:layout_width="320dp"
                    android:layout_height="40dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/botao_realizar_pagamento"
                    android:shadowColor="#5E43C3"
                    android:text="Realizar pagamento"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FAFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F6FAFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txtOla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="olá"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"

            android:textColor="#5E43C3"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Sair"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/sair"
            android:layout_marginLeft="250dp"
            android:background="#F6FAFF"/>

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="760dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="3"
        android:background="#F6FAFF">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="15dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"

                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/txtMeuSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="meu saldo"
                    android:textColor="#A6A6A6"
                    android:textSize="13dp"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnLocalizar"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/botao_solicitar"
                    android:onClick="GeoGo"
                    android:shadowColor="#878787"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="localização"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="8"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/txtValorTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R$ 478,49"
                    android:textColor="#5E43C3"
                    android:textSize="60dp" />

                        <ImageButton
                            android:id="@+id/OpenEye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/cardview_light_background"
                            app:srcCompat="@drawable/visibility__5_"/>

                    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Solicitar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/card"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="12dp"
                    android:background="#FFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="290dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="histórico de transações"
                    android:textColor="#4E4E4E"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="segunda-feira, 20 de setembro 2021"
                    android:textColor="#5E4E4E4E"
                    android:textSize="13dp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="340dp">

                <ImageButton
                    android:id="@+id/Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="325dp"
                    android:background="@color/cardview_light_background"
                    app:srcCompat="@drawable/ic_add_circle"
                    android:layout_marginTop="295dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="360dp"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:layout_rowWeight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_account" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAcao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Enviado para Allan da Silva Passos"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtDetalhes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="R$50,00 • por volta de 07:35 da manhã"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:layout_rowWeight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Perfil2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_account" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAcao2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Enviado para Allan da Silva Passos"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtDetalhes2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="R$50,00 • por volta de 07:35 da manhã"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center_vertical"
                    app:layout_row="0"
                    app:layout_rowWeight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/Perfil3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_account" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAcao3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Enviado para Allan da Silva Passos"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/txtDetalhes3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="R$50,00 • por volta de 07:35 da manhã"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>